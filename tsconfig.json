{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,


  },
  "lib": ["esnext", "dom"],
  "include": ["**/*.ts", ".env"],
  "exclude": ["node_modules", "**/*.spec.ts", "playwright.config.ts"]
}